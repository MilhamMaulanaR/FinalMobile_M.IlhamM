<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#13131A"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#13131A"
            android:padding="25dp"
            android:gravity="center">
            <ImageButton
                android:id="@+id/bookmark_user_item"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/icon_bookmark_pressed" />
            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:maxLines="11"
                android:ellipsize="end"
                android:textStyle="italic"
                android:scrollHorizontally="false"
                android:breakStrategy="high_quality"
                android:hyphenationFrequency="full"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/author1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Author"
                android:textAlignment="center"
                android:textColor="@color/white"/>


            <TextView
                android:id="@+id/category1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kalambold"
                android:text="QUOTABLE"
                android:textColor="#D3D6DB"
                android:textSize="20sp"
                android:layout_marginTop="15dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
