<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuoteDetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="23dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageButton
                            android:id="@+id/btn_back_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_back" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/quote_detail_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="end"
                                    android:text="Name"
                                    android:textColor="#13131A"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/quote_detail_username"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:text="Username"
                                    android:textColor="#13131A"
                                    android:textSize="11sp"
                                    android:fontFamily="@font/poppins_medium" />
                            </LinearLayout>

                        </LinearLayout>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/dq_avatar"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@drawable/avatar_image"
                            app:civ_border_color="@color/black"
                            app:civ_border_width="2dp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/download"
                        android:layout_width="match_parent"
                        android:layout_height="650dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/bg_quote" />

                            <ImageView
                                android:id="@+id/image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alpha="0.5"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_launcher_background" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="15dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="107dp"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_kategori_detail"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical"
                                    android:paddingVertical="10dp">

                                    <TextView
                                        android:id="@+id/kategori_quote_detail"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="Motivation"
                                        android:textColor="@color/black"
                                        android:textSize="13sp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <ImageButton
                                    android:id="@+id/bookmark_quote_detail"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/icon_bookmark" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="60dp"
                                android:baselineAligned="false"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/quote_detail"
                                    android:layout_width="match_parent"
                                    android:layout_height="700dp"
                                    android:layout_marginHorizontal="30dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppins_regular"
                                    android:gravity="center"
                                    android:text="Believe in yoursfghgzfgfzg fgz gzfzg  gzggz zg."
                                    android:textAlignment="center"
                                    android:textColor="#FFFFFF"
                                    android:textSize="26sp" />

                                <TextView
                                    android:id="@+id/author_quote_detail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="30dp"
                                    android:textAlignment="center"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="Jenna Clifford"
                                    android:textColor="#FFFFFF"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="580dp"
                                android:fontFamily="@font/kalambold"
                                android:text="QUOTABLE"
                                android:textAlignment="center"
                                android:textColor="#D3D6DB"
                                android:textSize="14sp" />
                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/btn_copy_quotedetail"
                        android:layout_width="145dp"
                        android:layout_height="61dp"
                        android:backgroundTint="@color/black"
                        android:layout_gravity="center"
                        android:text="Copy"
                        android:fontFamily="@font/poppins_medium"
                        app:cornerRadius="12dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btn_download_quotedetail"
                        android:layout_width="145dp"
                        android:layout_height="61dp"
                        android:backgroundTint="@color/white"
                        android:layout_gravity="center"
                        android:text="Download"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        app:cornerRadius="12dp"
                        app:strokeColor="@color/black"
                        app:strokeWidth="2dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="@drawable/green_white_selector"
        android:indeterminateTintMode="src_in" />


</FrameLayout>
